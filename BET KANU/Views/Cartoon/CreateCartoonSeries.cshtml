@model Product
<!-- file Uploads -->
<link href="~/plugins/fileuploads/css/dropify.css" rel="stylesheet" type="text/css" />

<link rel="stylesheet" href="~/css/dashboard.css">


@{
    ViewBag.Title = "Create New Product";
}

<div id="wrapper">
    <section class="bg-grey-500 promo">
        <div class="container">
            <h1 style="color:white"> &nbsp;Create New Cartoon-Series </h1>
        </div>
    </section>

    <section>
        <div class="col-md-12">

            <div class="container">
                <div class="col-12">
                    <form class="card" asp-action="CreateCartoonSeries" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Title" class="control-label"></label>
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TargetAudince" class="control-label"></label>
                                        <select class="form-control custom-select" asp-for="TargetAudince" asp-items="Html.GetEnumSelectList<Target>()">
                                            <option selected="selected">-None-</option>
                                        </select>
                                        <span asp-validation-for="TargetAudince" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="SmallImage" class="control-label"></label>
                                        <input asp-for="SmallUrl" class="dropify form-control" />
                                        <span asp-validation-for="SmallUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="CoverImage" class="control-label"></label>
                                        <input asp-for="CoverUrl" class="dropify form-control" />
                                        <span asp-validation-for="CoverUrl" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body" style="color:white">
                            <div class="row">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title"> Details</h3>
                                    </div>

                                    <!--START table-responsive -->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered" style="width:100%">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <label asp-for="SubCategory" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="SubCategory" class="form-control" />
                                                        <span asp-validation-for="SubCategory" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="ReleaseDate" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="ReleaseDate" class="form-control" />
                                                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="LongDescription" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="LongDescription" class="form-control" />
                                                        <span asp-validation-for="LongDescription" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="ShortDescription" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="ShortDescription" class="form-control" />
                                                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--END table-responsive #3a4258-->

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class=" col-md-6">
                                <a asp-controller="Manger" asp-action="Index" class="BackToList">Back to List</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" style="float:right;width: 19%;background-color: #3a4258;
                               margin-right: 32px" class="btn btn-primary btn-shadow" />
                        </div>

                    </form>
                </div>

            </div>



        </div>
    </section>
</div>



@section Scripts {
    @{
        <!-- file uploads js -->
        <script src="~/plugins/fileuploads/js/dropify.js"></script>
        <script>
            $('.dropify').dropify({
                messages: {
                    'default': 'Drag and drop a file here or click',
                    'replace': 'Drag and drop or click to replace',
                    'remove': 'Remove',
                    'error': 'Ooops, something wrong appended.'
                },
                error: {
                    'fileSize': 'The file size is too big (2M max).'
                }
            });
        </script>

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }