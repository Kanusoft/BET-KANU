@section Scripts {
    @{
        <!-- show Rows when filter  -->
        <script>
            $(document).ready(function () {
                $(".toggle-hidden-btn").each(function () {
                    var $btn = $(this);
                    var initialSvg = $btn.data("initial-svg");
                    var flippedSvg = $btn.data("flipped-svg");

                    $btn.find(".rotate-svg").html(initialSvg);

                    $btn.on("click", function () {
                        var commentText = $btn.next(".comment-text");
                        var rotateSvg = $btn.find(".rotate-svg");

                        commentText.toggleClass("visible");
                        rotateSvg.toggleClass("rotated");

                        if (rotateSvg.hasClass("rotated")) {
                            rotateSvg.html(flippedSvg);
                        } else {
                            rotateSvg.html(initialSvg);
                        }
                    });
                });
            });
        </script>
        <script>
            function showRows() {
                var selectedValue = document.getElementById("Category").value;

                var allRows = document.getElementsByTagName("tr");
                for (var i = 0; i < allRows.length; i++) {
                    allRows[i].style.display = "none";
                }

                var rowsToShow = document.querySelectorAll("[data-categories*='" + selectedValue + "']");
                for (var j = 0; j < rowsToShow.length; j++) {
                    rowsToShow[j].style.display = "table-row";
                }
            }

            document.addEventListener("DOMContentLoaded", showRows);
        </script>

        <script src="/plugins/fileuploads/js/Edit.dropify.js"></script>

        <!-- file uploads js -->
        <script src="~/plugins/fileuploads/js/dropify.js"></script>
        <script>
            $('.dropify').dropify({
                messages: {
                    'default': 'Drag and drop a file here or click',
                    'replace': 'Drag and drop or click to replace',
                    'remove': 'Remove',
                    'error': 'Ooops, something wrong appended.'
                },
                error: {
                    'fileSize': 'The file size is too big (2M max).'
                }
            });
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                var source = document.getElementById("ImageURL").src;
                var source2 = document.getElementById("ImageURL2").src;
                var source3 = document.getElementById("ImageURL3").src;
                $(".dropify-render:eq(0)").find("img").remove();
                $(".dropify-preview:eq(0)").attr("Style", "Display:Block");
                $(".dropify-render:eq(0)").append("<img src=" + source + " height=\"100%\" />");
                $(".dropify-render:eq(1)").find("img").remove();
                $(".dropify-preview:eq(1)").attr("Style", "Display:Block");
                $(".dropify-render:eq(1)").append("<img src=" + source2 + " height=\"100%\" />");
                $(".dropify-render:eq(2)").find("img").remove();
                $(".dropify-preview:eq(2)").attr("Style", "Display:Block");
                $(".dropify-render:eq(2)").append("<img src=" + source3 + " height=\"100%\" />");
            });
        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
