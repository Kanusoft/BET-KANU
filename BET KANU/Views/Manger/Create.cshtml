                <label asp-for="CreditsE" class="control-label"></label>
                <input asp-for="CreditsE" class="form-control" />
                <span asp-validation-for="CreditsE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditsW" class="control-label"></label>
                <input asp-for="CreditsW" class="form-control" />
                <span asp-validation-for="CreditsW" class="text-danger"></span>
            </div>
            <div class="form-group">
