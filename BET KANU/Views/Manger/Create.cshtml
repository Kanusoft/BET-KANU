            </div>
            <div class="form-group">
                <label asp-for="img5" class="control-label"></label>
                <input asp-for="imgUrl5" class="dropify form-control" />
                <span asp-validation-for="img5" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()">
                    <option selected="selected">-None-</option>
