@model Product

<!-- file Uploads -->
<link href="~/plugins/fileuploads/css/dropify.css" rel="stylesheet" type="text/css" />

<link rel="stylesheet" href="~/css/dashboard.css">


@{
    ViewBag.Title = "Create New Product";
}

<div id="wrapper">
    <section class="bg-grey-500 promo">
        <div class="container">
            <h1 style="color:white"> &nbsp;Create new Book </h1>
        </div>
    </section>

    <section>

        <div class="col-md-12">

            <div class="container">
                <div class="col-12">
                    <form class="card" asp-action="CreateBook" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Title" class="control-label"></label>
                                        <input asp-for="Title" class="form-control" required />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TargetAudince" class="control-label"></label>
                                        <select class="form-control custom-select" asp-for="TargetAudince" asp-items="Html.GetEnumSelectList<Target>()">
                                            <option selected="selected">-None-</option>
                                        </select>
                                        <span asp-validation-for="TargetAudince" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="SmallImage" class="control-label"></label>
                                        <input asp-for="SmallUrl" class="dropify form-control" />
                                        <span asp-validation-for="SmallUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="CoverImage" class="control-label"></label>
                                        <input asp-for="CoverUrl" class="dropify form-control" />
                                        <span asp-validation-for="CoverUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="img1" class="control-label"></label>
                                        <input asp-for="imgUrl" class="dropify form-control" />
                                        <span asp-validation-for="img1" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="img2" class="control-label"></label>
                                        <input asp-for="imgUrl2" class="dropify form-control" />
                                        <span asp-validation-for="img2" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="img3" class="control-label"></label>
                                        <input asp-for="imgUrl3" class="dropify form-control" />
                                        <span asp-validation-for="img3" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="img4" class="control-label"></label>
                                        <input asp-for="imgUrl4" class="dropify form-control" />
                                        <span asp-validation-for="img4" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="img5" class="control-label"></label>
                                        <input asp-for="imgUrl5" class="dropify form-control" />
                                        <span asp-validation-for="img5" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-body" style="color:white">
                            <div class="row">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title"> Details</h3>
                                    </div>

                                    <!--START table-responsive -->
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered" style="width:100%">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <label asp-for="SubCategory" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="SubCategory" class="form-control" />
                                                        <span asp-validation-for="SubCategory" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="ReleaseDate" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="ReleaseDate" class="form-control" />
                                                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="Author" class="control-label"></label>
                                                    </td>
                                                    <td>
                                                        <input asp-for="Author" class="form-control" placeholder="Author: Author Name" />
                                                        <span asp-validation-for="Author" class="text-danger"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label asp-for="DesignedBy" class="control-label"></label>
                                                    </td>
